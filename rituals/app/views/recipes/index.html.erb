<%user = @user%>
<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Direction</th>
      <th>Story</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.url %></td>
        <td><%= recipe.direction %></td>
        <td><%= recipe.story %></td>
        <td><%= link_to 'Show', user_recipe_path(recipe) %></td>
        <td><%= link_to 'Edit', edit_user_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', user_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_user_recipe_path %>
